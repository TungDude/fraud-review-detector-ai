{
    "extends": "@repo/typescript-config/reactjs.json",
    "compilerOptions": {
        "outDir": "./dist",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "target": "ES2020",
        "lib": ["ES2020", "DOM", "DOM.Iterable"],
        "paths": {
            "@/*": [
                "./src/*"
            ]
        },
        "types": ["vite/client"],
        "allowImportingTsExtensions": false,
        "noEmit": true
    },
    "include": [
        "src/**/*",
        "src/**/*.ts",
        "src/**/*.tsx"
    ],
    "exclude": [
        "node_modules"
    ]
}